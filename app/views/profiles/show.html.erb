<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profiles_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '50x50' %></td> 
        </tr>
      </table>
      <h3 id="post" style="text-align: center;" class="mt-5 mb-3"><%= t('.my_post_title') %></h3>
      <div class="row" style="justify-content: space-around;">
        <% if @myposts.present? %>
          <%= render @myposts %>
        <% else %>
          <p><%= t('.post_no_result') %></p>
        <% end %>
      </div>
      <h3 id="post" style="text-align: center;" class="mt-5 mb-3"><%= t('.draft_title') %></h3>
      <div class="row" style="justify-content: space-around;">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>

    </div>
  </div>
</div>
