<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profiles_path, class: 'btn btn-dark float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:name) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '50x50', alt: "アバター" %></td> 
        </tr>
      </table>
      <div class="btn-group mb-3" role="group" aria-label="Basic outlined example">
        <%= link_to t('.my_post'), my_post_order_profiles_path, class: "active btn btn-outline-dark", id: "js-active-new", data: { turbo: true, turbo_method: :get } %>
        <%= link_to t('.draft'), my_draft_order_profiles_path, class: "btn btn-outline-dark", id: "js-active-edit", data: { turbo: true, urbo_method: :get } %>
      </div>
      <div class="col-12">
        <%= render 'profiles/profile_order', posts: @myposts %>
      </div>
    </div>
  </div>
</div>
