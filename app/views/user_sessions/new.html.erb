<% content_for(:title, t('.title')) %>
<div class="container mt-3">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group mt-4">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control mt-1' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control mt-1' %>
        </div>
        <div class="actions">
          <%= f.submit t('.button'), class: 'btn btn-dark mt-4 ms-auto me-auto', style: 'display: block;' %>
        </div>
      <% end %>
      <div class='mt-4 text-center'>
        <%= link_to t('.to_register_page'), new_user_path %>
        <%= link_to t('.password_forget'), '#', style: 'margin-left: 20px;' %>
      </div>
    </div>
  </div>
</div>
