<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group mt-4">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control mt-1' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control mt-1' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control mt-1' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control mt-1' %>
        </div>
        <%= f.submit t('.button'), class: 'btn btn-dark mt-4 ms-auto me-auto', style: 'display: block;' %>
      <% end %>
      <div class='text-center mt-4'>
        <%= link_to t('.to_login_page'), login_path %>
      </div>
    </div>
  </div>
</div>
