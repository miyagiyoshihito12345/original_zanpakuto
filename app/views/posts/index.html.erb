<div style="position: relative;">
  <%= image_tag 'top_page.png', class: 'hoge', style: 'width: 100%; z-index: 2;' %>
  <div style="position: absolute; top: 50%; z-index: 3; left: 50%; transform: translate(-50%, -50%);">
    <h2 class="text-light text-center" style="font-family: serif;">オリジナル斬魄刀投稿サイト</h2>
    <p class="text-light text-center">Original Zanpakuto Share Service</p>
    <div class="mt-4 mb-4">
      <p class="text-light text-center"><%= t('defaults.top_detail') %></p>
    </div>
    <div class="text-center">
      <%= link_to t('defaults.top_button'), new_post_path, class: 'btn btn-light' %>
    </div>
  </div>
</div>
<h3 id="post" style="text-align: center;" class="mt-5 mb-3"><%= t('.title') %></h3>
<div class="container pt-3">
  <div class="row">
    <div class="col-12">
      <div class="row" style="justify-content: space-around;">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>
