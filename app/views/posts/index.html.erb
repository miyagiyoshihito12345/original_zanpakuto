<div style="position: relative;">
  <%= image_tag 'top_page.webp', class: 'hoge', style: 'width: 100%; z-index: 2;', alt: "トップページ" %>
  <%= image_tag 'top_page_smart.webp', class: 'smart_hoge', style: 'width: 100%; z-index: 2;', alt: "トップページ" %>
  <div style="position: absolute; top: 50%; z-index: 3; left: 50%; transform: translate(-50%, -50%);">
    <h2 class="text-nowrap text-light text-center top-page-title" style="font-family: serif;">オリジナル斬魄刀投稿サイト</h2>
    <p class="text-light text-center top-page-sub-title", style="font-family: serif;">Original Zanpakuto Share Service</p>
    <div class="mt-4 mb-4">
      <p class="text-light text-center top-page-detail", style="font-family: serif;"><%= t('defaults.top_detail') %></p>
    </div>
    <div class="text-center">
      <%= link_to t('defaults.top_button'), new_post_path, class: 'btn btn-light', style: 'font-family: serif;' %>
      <%# link_to 'AIで創る', new_ai_post_path, class: 'btn btn-light', style: 'font-family: serif;' %>
    </div>
  </div>
</div>
<%= render 'shared/search' %>
<h3 id="post" style="text-align: center;" class="mt-5 mb-3"><%= t('.title') %></h3>
<div class="container pt-3">
  <ul class="nav nav-tabs mb-3" data-controller="button">
    <li class="nav-item">
      <%= link_to "新着順", index_new_order_posts_path, class: "active nav-link text-dark", data: { turbo: true, button_target: 'new', action: 'click->button#new_button' } %>
    </li>
    <li class="nav-item">
      <%= link_to "更新順", index_edit_order_posts_path, class: "nav-link text-dark", data: { turbo: true, button_target: 'edit', action: 'click->button#edit_button' } %>
    </li>
    <li class="nav-item">
      <%= link_to "人気順", index_reiatu_order_posts_path, class: "nav-link text-dark", data: { turbo: true, button_target: 'reiatu', action: 'click->button#reiatu_button' } %>
    </li>
  </ul>
  <div class="row">
    <div class="col-12">
      <%= render 'posts/index_order', posts: @posts %>
    </div>
  </div>
</div>
