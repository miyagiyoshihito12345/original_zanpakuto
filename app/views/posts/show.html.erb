<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <div class="show-img">
        <%= image_tag @post.image.url, class: 'card-img-top', style: 'width: 100%; height: 100%;' %>
      </div>
      <div style="align-items: center; display: flex;" class="mt-3 ms-2">
        <%= image_tag @post.user.avatar.url, class: 'me-2 rounded-circle', size: '30x30' %>
        <%= @post.user.name %>
      </div>
         <%= render 'crud_menus', post: @post if current_user&.own?(@post) %>
      <table class="table">
        <%= render 'posts/tag_list', tag_list: @post.tag_list %>
        <% if @post.kaigo.present? %>
          <tr>
            <th scope="row">【<%= t('.kaigo')  %>】</th>
            <td>
              <ruby>
                <%= @post.kaigo %>
                <rt><%= @post.kaigo_hurigana %></rt>
              </ruby>
            </td>
          </tr>
        <% end %>
        <tr>
          <th scope="row" style="padding-top: 14px;">【<%= t('.shikai')  %>】</th>
          <td class="pt-3">
            <ruby>
              <%= @post.shikai %>
              <rt><%= @post.shikai_hurigana %></rt>
            </ruby>
          </td>
        </tr>
        <tr>
          <th scope="row" style="min-width: 130px;">【<%= t('.ability')  %>】</th>
          <td>
            <%= simple_format(@post.ability) %>
          </td>
        </tr>
        <% if @post.bankai.present? %>
          <tr>
            <th scope="row" style="padding-top: 14px;">【<%= t('.bankai')  %>】</th>
            <td class="pt-3">
              <ruby>
                <%= @post.bankai %>
                <rt><%= @post.bankai_hurigana %></rt>
              </ruby>
            </td>
          </tr>
        <% end %>
        <% if @post.bankai_ability.present? %>
          <tr>
            <th scope="row" style="min-width: 130px;">【<%= t('.bankai_ability')  %>】</th>
            <td>
              <%= simple_format(@post.bankai_ability) %>
            </td>
          </tr>
        <% end %>
        <% if @post.detail.present? %>
          <tr>
            <th scope="row">【<%= t('.detail')  %>】</th>
            <td>
              <%= simple_format(@post.detail) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
